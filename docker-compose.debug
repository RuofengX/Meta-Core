version: '3'
services:
  meta:
    build:
      context: .
      target: production
      dockerfile: Dockerfile-prod
    ports:
      - 25575:25565  # Meta
    restart: always
    stdin_open: true  # -i
    tty: true  # -t
    logging:
      driver: json-file
      options:
        max-size: "500k"
        max-file: "10"